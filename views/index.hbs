   <div class=" mt-4 container">
    <div class="card">
      <div class="card-header">
        Rezervacija proslave rođendanske zabave
      </div>
        <div class="card-body">
          <form action="/auth/" method="POST">
            <div class="form-group">
              <label for="ime">Ime roditelja:</label>
              <input type="text" class="form-control" id="ime" name="ime" required>
            </div>
            <div class="form-group">
             <label for="prezime">Prezime roditelja:</label>
              <input type="text" class="form-control" id="prezime" name="prezime" required>
            </div>
            <div class="form-group">
              <label for="ime_slavljenika">Ime slavljenika:</label>
              <input type="text" class="form-control" id="ime_slavljenika" name="ime_slavljenika" required>
            </div>
            <div class="form-group">
              <label for="br_uzvanika">Broj uzvanika:</label>
              <input type="integer" class="form-control" id="br_uzvanika" name="br_uzvanika" required>
            </div>
            <div class="form-group">
              <label for="god_slavljenika">Godine slavljenika:</label>
              <input type="integer" class="form-control" id="god_slavljenika" name="god_slavljenika" required>
            </div>
            <div class="form-group">
              <label for="kontakt">Kontakt broj:</label>
              <input type="text" class="form-control" id="kontakt" name="kontakt" required>
            </div>
            <div class="form-group">
              <label for="email_adr">E-mail adresa:</label>
              <input type="text" class="form-control" id="email_adr" name="email_adr" required>
            </div>
           <div class = "form-group">
            <label for="datum">Odaberite datum održavanja proslave rođendana:</label>
            <input type="date" class="form-control" id="datum" name="datum" >
          </div> 
          <div class = "form-group">
            <label for="vrijeme">Odaberite vrijeme održavaja proslave rođendana:</label>
            <input type="time" class="form-control" id="vrijeme" name="vrijeme" >
          </div> 
           <div class="form-group ">
              <label for="napomena">Napomena:</label>
              <input type="text" class="form-control" id="napomena" name="napomena" >
          </div>
            <div class="row justify-content-center">
            <button type="submit" class="btn btn-outline-primary">Rezerviraj</button></a>
          </div>
          </form>
        </div>
       </div> 
</div> 
